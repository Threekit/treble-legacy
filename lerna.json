{
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "ignoreChanges": [
        "package.json",
        "lerna.json",
        "demos",
        "**/CHANGELOG.md",
        "**/node_modules/**",
        "**/package.json",
        "**/*.md",
        "**/*.spec.*",
        "**/*.stories.*"
      ]
    },
    "conventionalCommits": true,
    "message": "chore(release): publish"
  }
}
